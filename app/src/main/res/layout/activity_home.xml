<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/services_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/services_header_text_1"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/services_btn_1"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/primary_color"
        android:text="@string/services_btn_text_1"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/services_header" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/services_btn_2"
        android:layout_width="180dp"
        android:layout_height="123dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:background="@color/primary_color"
        android:text="@string/services_btn_text_2"
        android:textColor="@color/secondary_color"
        app:layout_constraintStart_toEndOf="@+id/services_btn_1"
        app:layout_constraintTop_toBottomOf="@+id/services_header" />

</androidx.constraintlayout.widget.ConstraintLayout>