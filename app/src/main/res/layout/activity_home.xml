<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/services_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/syne_font"
                android:text="@string/services_header_text_1"
                android:textColor="@color/primary_color"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/services_btn_1"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/services_btn_text_1"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/services_btn_2"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/services_btn_text_2"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/services_btn_3"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/services_btn_text_3"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/services_header_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/syne_font"
                android:text="@string/services_header_text_2"
                android:textColor="@color/primary_color"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uni_services_btn_1"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/university_website_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uni_services_btn_2"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/student_care_btn"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uni_services_btn_3"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/graduation_btn"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uni_services_btn_4"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="@string/library_btn"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/uni_services_btn_5"
                    android:layout_width="180dp"
                    android:layout_height="122dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="Νεα"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/services_header_"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/syne_font"
                android:text="@string/services_header_text_3"
                android:textColor="@color/primary_color"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/more_btn_1"
                    android:layout_width="180dp"
                    android:layout_height="123dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/primary_color"
                    android:fontFamily="@font/syne_font"
                    android:text="OpenSource  UoM"
                    android:textColor="@color/secondary_color"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>